# Database connection
DATABASE_URL="postgresql://user:password@localhost:5432/openclaw?schema=public"

# Webhook configuration (optional)
# POST to this URL when task events occur
WEBHOOK_URL=

# Secret for HMAC-SHA256 signature verification (optional but recommended)
# Signature sent in X-OpenClaw-Signature header as "sha256=<hex>"
WEBHOOK_SECRET=

# Comma-separated list of events to send (empty = all events)
# Available: task.created, task.updated, task.status_changed, task.deleted
WEBHOOK_EVENTS=

# Additional webhooks (up to 5)
# WEBHOOK_URL_1=
# WEBHOOK_SECRET_1=
# WEBHOOK_EVENTS_1=
